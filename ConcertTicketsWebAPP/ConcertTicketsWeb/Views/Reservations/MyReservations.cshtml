@model IEnumerable<ConcertTicketsWeb.Models.Reservation>

@{
    ViewBag.Title = "My Reservations";
}

<h2>My Reservations</h2>

<table class="table">
    <tr>
        <th>
            Concert @Html.DisplayNameFor(model => model.Concert.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seat.Row)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seat.Column)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seat.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Concert.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seat.Row)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seat.Column)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seat.Price)
        </td>
        <td>
            @Html.ActionLink("Cancel", "Cancel", new { id=item.ID })
        </td>
    </tr>
}

</table>
